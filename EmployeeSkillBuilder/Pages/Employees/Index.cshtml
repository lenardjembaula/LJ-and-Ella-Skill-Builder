@page
@model EmployeeSkillBuilder.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4 employee-table">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-page="Create" class="btn btn-primary btn-sm">Add Employee</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Email Address</th>
                    <th>Date of Birth</th>
                    <th>Date Modified</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.EmployeeList != null && Model.EmployeeList.Any())
                {
                    foreach (var employee in Model.EmployeeList)
                    {
                        <tr>
                            <td>@employee.full_name</td>
                            <td>@employee.email_address</td>
                            <td>@employee.date_of_birth_display</td>
                            <td>@employee.date_modified_display</td>
                            <td>
                                <a class="btn btn-primary btn-sm me-1" asp-page="/Employees/Update" asp-route-id="@employee.id">Update</a>
                                <a class="btn btn-secondary btn-sm me-1" asp-page="/Employees/Details" asp-route-id="@employee.id">Details</a>
                                <a class="btn btn-danger btn-sm" asp-page="/Employees/Delete" asp-route-id="@employee.id">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No employees found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>