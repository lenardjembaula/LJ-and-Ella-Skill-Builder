@page
@model EmployeeSkillBuilder.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Create Employee";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label class="form-label">First name:</label>
        <input asp-for="EmployeeToCreate.first_name" type="text" class="form-control">
        <span asp-validation-for="EmployeeToCreate.first_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Last name:</label>
        <input asp-for="EmployeeToCreate.last_name" type="text" class="form-control">
        <span asp-validation-for="EmployeeToCreate.last_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Email address:</label>
        <input asp-for="EmployeeToCreate.email_address" type="email" class="form-control">
        <span asp-validation-for="EmployeeToCreate.email_address" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label class="form-label">Date of Birth:</label>
        <input asp-for="EmployeeToCreate.date_of_birth" type="date" class="form-control">
        <span asp-validation-for="EmployeeToCreate.date_of_birth" class="text-danger"></span>
    </div>

    <hr />
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="/Employees/Index" class="btn btn-danger">Cancel</a>
</form>