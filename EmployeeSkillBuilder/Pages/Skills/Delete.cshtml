@page
@model EmployeeSkillBuilder.Pages.Skills.DeleteModel
@{
    ViewData["Title"] = "Skill Details";
}

<h2>Are you sure you want to delete this record?</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="SkillToDelete.skill_name" class="form-label">Skill name:</label>
        <input asp-for="SkillToDelete.skill_name" type="text" class="form-control" disabled />
        <span asp-validation-for="SkillToDelete.skill_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SkillToDelete.description" class="form-label">Description:</label>
        <input asp-for="SkillToDelete.description" type="text" class="form-control" disabled />
        <span asp-validation-for="SkillToDelete.description" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-group">
        <a asp-page="/Skills/Index" class="btn btn-primary">Back</a>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>